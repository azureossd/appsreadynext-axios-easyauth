extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/translate")
            #error
                if error
                    p.text-danger Error!!!
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Azure Translate Test

            label(for="dataLabel" class="sr-only") Text to translate:
            div
            input(name="data" class="form-control" placeholder="Text to translate" required autofocus)

            label(for="inputEmail" class="sr-only") Translate from:
            div
            select(name="from" class="form-control" placeholder="Current Language")
              option(value="en") English
              option(value="es") Spanish
              option(value="de") German
              option(value="ja") Japanese
              option(value="vi") Vietnamese
              option(value="ko") Korean

            label(for="toLabel" class="sr-only") Translate to:
            select(name="to" class="form-control" placeholder="Translate To")
              option(value="es") Spanish
              option(value="de") German
              option(value="ja") Japanese
              option(value="vi") Vietnamese
              option(value="ko") Korean

            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Translate
            div= message
            
